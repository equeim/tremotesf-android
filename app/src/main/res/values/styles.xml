<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/light_system_bars</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/light_system_bars</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
<!--       Android removes background from our icon on splash screen. Override windowSplashScreenIconBackgroundColor to fix it -->
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@color/ic_launcher_background</item>

        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="colorOnPrimary">@color/theme_red_onPrimary</item>
        <item name="colorPrimaryContainer">@color/theme_red_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/theme_red_onPrimaryContainer</item>
        <item name="colorSecondary">@color/theme_red_secondary</item>
        <item name="colorOnSecondary">@color/theme_red_onSecondary</item>
        <item name="colorSecondaryContainer">@color/theme_red_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/theme_red_onSecondaryContainer</item>
        <item name="colorTertiary">@color/theme_red_tertiary</item>
        <item name="colorOnTertiary">@color/theme_red_onTertiary</item>
        <item name="colorTertiaryContainer">@color/theme_red_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/theme_red_onTertiaryContainer</item>
        <item name="colorError">@color/theme_red_error</item>
        <item name="colorErrorContainer">@color/theme_red_errorContainer</item>
        <item name="colorOnError">@color/theme_red_onError</item>
        <item name="colorOnErrorContainer">@color/theme_red_onErrorContainer</item>
        <item name="android:colorBackground">@color/theme_red_background</item>
        <item name="colorOnBackground">@color/theme_red_onBackground</item>
        <item name="colorSurface">@color/theme_red_surface</item>
        <item name="colorOnSurface">@color/theme_red_onSurface</item>
        <item name="colorSurfaceVariant">@color/theme_red_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/theme_red_onSurfaceVariant</item>
        <item name="colorOutline">@color/theme_red_outline</item>
        <item name="colorOnSurfaceInverse">@color/theme_red_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/theme_red_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/theme_red_inversePrimary</item>
        <item name="android:windowBackground">@color/theme_red_background</item>

        <item name="elevationOverlayColor">@android:color/white</item>

        <item name="android:importantForAutofill" tools:targetApi="26">noExcludeDescendants</item>

        <item name="searchViewStyle">@style/Widget.Tremotesf.SearchView</item>
        <item name="actionModeStyle">@style/Widget.Tremotesf.ActionMode</item>
        <item name="toolbarStyle">@style/Widget.Tremotesf.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.Tremotesf.AppBarLayout</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="timePickerItemStyle">@style/Widget.Tremotesf.TimePickerItem</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Tremotesf.BottomSheetDialog</item>
        <item name="materialCardViewStyle">@style/Widget.Tremotesf.CardView</item>
        <item name="settingsColorThemeChoiceViewStyle">@style/Widget.Tremotesf.SettingsColorThemeChoiceView</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="colorPrimary">@color/theme_teal_primary</item>
        <item name="colorOnPrimary">@color/theme_teal_onPrimary</item>
        <item name="colorPrimaryContainer">@color/theme_teal_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/theme_teal_onPrimaryContainer</item>
        <item name="colorSecondary">@color/theme_teal_secondary</item>
        <item name="colorOnSecondary">@color/theme_teal_onSecondary</item>
        <item name="colorSecondaryContainer">@color/theme_teal_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/theme_teal_onSecondaryContainer</item>
        <item name="colorTertiary">@color/theme_teal_tertiary</item>
        <item name="colorOnTertiary">@color/theme_teal_onTertiary</item>
        <item name="colorTertiaryContainer">@color/theme_teal_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/theme_teal_onTertiaryContainer</item>
        <item name="colorError">@color/theme_teal_error</item>
        <item name="colorErrorContainer">@color/theme_teal_errorContainer</item>
        <item name="colorOnError">@color/theme_teal_onError</item>
        <item name="colorOnErrorContainer">@color/theme_teal_onErrorContainer</item>
        <item name="android:colorBackground">@color/theme_teal_background</item>
        <item name="colorOnBackground">@color/theme_teal_onBackground</item>
        <item name="colorSurface">@color/theme_teal_surface</item>
        <item name="colorOnSurface">@color/theme_teal_onSurface</item>
        <item name="colorSurfaceVariant">@color/theme_teal_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/theme_teal_onSurfaceVariant</item>
        <item name="colorOutline">@color/theme_teal_outline</item>
        <item name="colorOnSurfaceInverse">@color/theme_teal_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/theme_teal_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/theme_teal_inversePrimary</item>
        <item name="android:windowBackground">@color/theme_teal_background</item>
    </style>

    <style name="AppTheme.Splash" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/theme_red_background_night</item>
    </style>

    <style name="TextApperance.Tremotesf.EmptyPlaceholder" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="TextApperance.Tremotesf.EmptyPlaceholder.Small" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="HeaderTextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Tremotesf.ActionMode" parent="Widget.Material3.ActionMode">
        <item name="background">@drawable/action_mode_background</item>
        <item name="backgroundSplit">@drawable/action_mode_background</item>
    </style>

    <style name="Widget.Tremotesf.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Tremotesf.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="liftOnScroll">false</item>
        <item name="android:elevation">@dimen/action_bar_elevation</item>
    </style>

    <style name="Widget.Tremotesf.TimePickerItem" parent="android:Widget">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="ThemeOverlay.Tremotesf.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Tremotesf.BottomSheet.Modal</item>
    </style>

    <style name="Widget.Tremotesf.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <!-- A hack to set our own corners animation (see NavigationBottomSheetDialogFragment) -->
        <item name="shapeAppearance">@null</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="paddingRightSystemWindowInsets">false</item>
        <item name="paddingLeftSystemWindowInsets">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.Tremotesf.BottomSheet" parent="">
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_corner_size</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_corner_size</item>
    </style>

    <style name="Widget.Tremotesf.BottomSheetMenuItem" parent="Widget.AppCompat.TextView">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="Widget.Tremotesf.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="Widget.Tremotesf.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/ic_search_24dp</item>
    </style>

    <style name="TextAppearance.Tremotesf.BottomSheetHeader" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Tremotesf.DragHandle" parent="android:Widget">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@drawable/drag_handle</item>
    </style>

    <style name="Widget.Tremotesf.SettingsColorThemeChoiceView" parent="android:Widget">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">?attr/dialogPreferredPadding</item>
        <item name="android:paddingEnd">?attr/dialogPreferredPadding</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:drawableStart">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/textColorAlertDialogListItem</item>
    </style>

    <style name="Widget.Tremotesf.BottomAppBarActionButton" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Tremotesf.BottomAppBarActionButton</item>
        <item name="android:minHeight">@dimen/bottom_app_bar_action_button_height</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">?shapeAppearanceCornerLarge</item>
    </style>

    <style name="Widget.Tremotesf.BottomAppBarActionButton.IconButton">
        <item name="android:minWidth">@dimen/bottom_app_bar_action_button_height</item>
        <item name="iconSize">24dp</item>
        <item name="android:padding">0dp</item>
        <!-- Calculated as (minWidth - iconSize) / 2  -->
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="ThemeOverlay.Tremotesf.BottomAppBarActionButton" parent="ThemeOverlay.Material3.Button">
        <item name="colorOnContainer">?colorOnPrimaryContainer</item>
        <item name="colorContainer">?colorPrimaryContainer</item>
    </style>
</resources>
